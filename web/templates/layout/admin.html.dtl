<!DOCTYPE html>
<html lang="de">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Administrationsinterface</title>
        <meta name="description" content="Administrationsinterface" />
        {% block head %}
            <link rel="stylesheet" href="/static/bower_components/bootstrap/dist/css/bootstrap.min.css" />
            <script src="{{ path.static }}/bower_components/jquery/dist/jquery.min.js"          type="text/javascript"></script>
            <script src="{{ path.static }}/bower_components/underscore/underscore-min.js"       type="text/javascript"></script>
            <script src="{{ path.static }}/bower_components/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
        {% endblock %}
        <style type="text/css">
            nav li.before-dropdown > a { padding-right: 0; }
            nav li.before-dropdown + li.dropdown > a { padding-left: 8px; }
            #all .navbar-default .navbar-nav > .open > a { background-color: #bbb }
        </style>
    </head>
    <body>
        <!--[if lt IE 8]>
            <p class="alert alert-danger">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <div id="all">
            <nav class="navbar navbar-inverse" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/admin">
                            {% block brand  %}
                                <small>Admin</small> Hello2
                            {% endblock %}
                        </a>
                    </div>

                    {% for item in navigation %}
                        {% if item.ul_start %}
                            <ul {% if item.classes|length > 0 %}class="{{ item.classes | join: " " }}"{% endif %}>
                        {% elif item.ul_stop %}
                            </ul>
                        {% elif item.li_start %}
                            <li {% if item.classes|length > 0 %}class="{{ item.classes | join: " " }}"{% endif %}>
                        {% elif item.li_stop %}
                            </li>
                        {% elif item.anchor %}
                            <a href="{{ item.href }}">{{ item.text }}</a>
                        {% elif item.dropdown_toggle %}
                            <a href="#" class="dropdown-toggle " data-toggle="dropdown"><b class="caret"></b></a>
                        {% endif %}
                    {% endfor %}

                    {% if user.id %}
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Konto<b class="caret"></b></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="/auth/logout">Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    {% endif %}
                </div> <!--/.container-fluid-->
            </nav>

            <div id="content">
            {% block content %}{% endblock %}
            </div>
        </div>
    </body>
</html>
